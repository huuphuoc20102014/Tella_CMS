@model List<CustomerViewModel>

@{
    ViewData["Title"] = "Khách hàng";
}

<h1>Danh sách Khách Hàng</h1>

<p>
    <a asp-action="Create">Thêm thông tin Khách Hàng</a>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th></th>
            <th>STT</th>
            <th>
                Mã Khách Hàng
            </th>
            <th>
                Tên Khách Hàng
            </th>

            <th>
                Địa chỉ
            </th>
            <th>
                Năm sinh
            </th>
            <th>
                SĐT
            </th>
            <th>
                Trạng thái
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Xem</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xoá</a>
                    <a class="btn btn-danger" asp-action="CapThe" asp-route-id="@item.Id">Cấp thẻ</a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                @{
                    if (item.FkCustomerId == (int)RowStatusEnum.Normal)
                    {
                        <td>
                            Normal

                        </td>
                    }
                    else
                    {
                        <td>
                            VIP

                        </td>
                    }
                }

            </tr>
        }
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>