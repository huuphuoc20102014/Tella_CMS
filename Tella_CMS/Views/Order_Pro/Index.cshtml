@model IEnumerable<Tella_CMS.Efs.Entities.Oder_view>

@{
    ViewData["Title"] = "Index";
}

<div style="text-align: center" class="alert alert-primary" role="alert">
    <h1>Danh sách đơn hàng</h1>
</div>
<p>
    <a class="btn btn-primary" asp-action="Create">Tạo mới đơn hàng</a>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                Mã đơn hàng
            </th>
            <th>
                Tên khách hàng
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Tuổi
            </th>
            <th>
                SĐT
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Ngày tạo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @item.NgayTao.ToString("dd/MM/yyyy")
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Code">Sửa</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Code">Xem</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Code">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>